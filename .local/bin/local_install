#!/usr/bin/env sh
# local_install : helper to install softwares in .local
# Author : Vincent Demeester
abspath="$(dirname $0)"

command -v curl >/dev/null || {
    echo "$(basename $0): curl command not found." 1>&2
    echo "$(basename $0): if you're running debian : apt-get install curl" 1>&2
}

installer=$1
shift

if test -x "${abspath}/install/${installer}"; then
    exec ${abspath}/install/${installer} $*
else
    echo "$(basename $0): $1 installer not found. Wanna write one ?"
fi

